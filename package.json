{
  "name": "auto-publish-system",
  "version": "1.0.0",
  "description": "Complete automated content creation system - from trend detection to delivery",
  "main": "run-autopublish.js",
  "bin": {
    "auto-publish": "./run-autopublish.js"
  },
  "scripts": {
    "start": "node run-autopublish.js",
    "dev": "node run-autopublish.js --verbose",
    "dry-run": "node run-autopublish.js --dry-run",
    "test": "npm run test:modules && npm run test:workflow",
    "test:modules": "node test-modules.js",
    "test:workflow": "node test-workflow.js",
    "validate": "node run-autopublish.js --dry-run --verbose",
    "setup": "npm install && npm run setup:directories && npm run setup:env",
    "setup:directories": "node -e \"require('fs-extra').ensureDirSync('output'); require('fs-extra').ensureDirSync('logs');\"",
    "setup:env": "node -e \"if (!require('fs').existsSync('.env')) require('fs').writeFileSync('.env', '# Auto-Publish System Environment Variables\\n# Add your API keys here\\n');\"",
    "clean": "node -e \"require('fs-extra').emptyDirSync('output'); require('fs-extra').emptyDirSync('logs');\"",
    "install-optional": "npm install --save-optional",
    "health-check": "node -e \"console.log('System health check...'); require('./core/workflow-engine'); console.log('âœ… Core system operational');\""
  },
  "keywords": [
    "automation",
    "content-creation",
    "ai",
    "podcast",
    "video",
    "tts",
    "text-to-speech",
    "workflow",
    "social-media",
    "trending",
    "auto-publish"
  ],
  "author": "Auto-Publish System",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
